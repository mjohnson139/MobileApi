{
  "name": "mobile-api",
  "version": "1.0.0",
  "description": "Mobile API Control Pattern - Embedded HTTP server for mobile applications",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "dev": "nodemon --exec 'npm run type-check && npm start'",
    "test:server": "jest src/server --testPathPattern=server",
    "test:automation": "node scripts/test-automation.js",
    "test:automation:full": "scripts/test-automation.sh --start-server",
    "test:automation:curl": "scripts/test-automation.sh --curl-examples",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.3",
    "@reduxjs/toolkit": "^1.9.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "react": "18.2.0",
    "react-native": "0.74.0",
    "react-native-get-random-values": "^1.9.0",
    "react-redux": "^8.1.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.74.0",
    "@react-native/eslint-config": "0.74.0",
    "@react-native/metro-config": "0.74.0",
    "@react-native/typescript-config": "0.74.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.0.10",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.77.0",
    "nodemon": "^3.0.2",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "supertest": "^6.3.3",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": [
      "**/__tests__/**/*.(js|ts|tsx)",
      "**/*.(test|spec).(js|ts|tsx)"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-redux|@reduxjs/toolkit)/)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  }
}
