# Test Automation Configuration
# This file contains configuration parameters for the Mobile API Control Pattern test automation script

# API Server Configuration
API_BASE_URL=http://localhost:8080
API_USERNAME=api_user
API_PASSWORD=mobile_api_password

# Screenshot Configuration
SCREENSHOT_FORMAT=png
SCREENSHOT_QUALITY=0.9
SCREENSHOT_WIDTH=375
SCREENSHOT_HEIGHT=667

# Test Configuration
TEST_TIMEOUT=30000
MAX_RETRIES=30
RETRY_DELAY=1000

# Report Configuration
GENERATE_HTML_REPORT=true
INCLUDE_SCREENSHOTS_IN_REPORT=true
REPORT_FORMAT=html

# Directories
SCREENSHOT_DIR=./test-screenshots
REPORT_DIR=./test-reports

# Server Configuration (for starting embedded server)
SERVER_PORT=8080
JWT_SECRET=test-automation-secret-key-replace-in-production
ENABLE_API_SERVER=true

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=true
LOG_REQUESTS=true
LOG_RESPONSES=true

# Test Scenario Configuration
RUN_AUTHENTICATION_TESTS=true
RUN_LIGHT_CONTROL_TESTS=true
RUN_SCENE_CONTROL_TESTS=true
RUN_MULTIPLE_LIGHT_TESTS=true
RUN_HEALTH_VERIFICATION_TESTS=true

# Performance Thresholds
MAX_RESPONSE_TIME_MS=5000
MIN_SUCCESS_RATE_PERCENT=80

# Light Control Test Data
LIVING_ROOM_LIGHT_PATH=ui.controls.living_room_light
BEDROOM_LIGHT_PATH=ui.controls.bedroom_light
KITCHEN_LIGHT_PATH=ui.controls.kitchen_light

# Scene Test Data
MOVIE_NIGHT_SCENE_ID=movie-night
BRIGHT_SCENE_ID=bright
PARTY_SCENE_ID=party
SLEEP_SCENE_ID=sleep

# Color Test Values
BLUE_COLOR=#0000FF
RED_COLOR=#FF0000
GREEN_COLOR=#00FF00
WHITE_COLOR=#FFFFFF